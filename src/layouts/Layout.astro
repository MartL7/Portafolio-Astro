---
interface Props {
	title: string
}

const { title } = Astro.props
import Header from '../components/Header.astro'
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[radial-gradient(circle_farthest-side,rgba(255,0,182,.15),rgba(255,255,255,0))]">
		<Header />
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		color-scheme: light dark;
		scroll-behavior: smooth;
	}

	body {
		display: flex;
		justify-content: center;
		flex-direction: column;
		align-items: center;
		min-height: 100vh;
	}

	.shadow-text-custom {
		text-shadow: 0 0 5px orange, 0 0 15px orange, 0 0 30px orange;
	}

	.shadow-text-green {
		text-shadow: 0 0 5px green, 0 0 15px green, 0 0 30px green;
	}

	.shadow-text-blue {
		text-shadow: 0 0 5px blue, 0 0 15px blue, 0 0 30px blue;
	}

	.shadow-text-purple {
		text-shadow: 0 0 5px purple, 0 0 15px purple, 0 0 30px purple;
	}

	.shadow-border-custom {
		border: 2px solid white;
    	box-shadow: inset 0 0 5px red, 0 0 10px red;
	}
</style>
